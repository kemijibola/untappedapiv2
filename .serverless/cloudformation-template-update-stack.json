{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "The AWS CloudFormation template for this Serverless application",
  "Resources": {
    "ServerlessDeploymentBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketEncryption": {
          "ServerSideEncryptionConfiguration": [
            {
              "ServerSideEncryptionByDefault": {
                "SSEAlgorithm": "AES256"
              }
            }
          ]
        }
      }
    },
    "ScheduleEmailLogGroup": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": "/aws/lambda/untapped-email-scheduler-development-dev-ScheduleEmail"
      }
    },
    "SendEmailLogGroup": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": "/aws/lambda/untapped-email-scheduler-development-dev-SendEmail"
      }
    },
    "IamRoleLambdaExecution": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": {
              "Fn::Join": [
                "-",
                [
                  "dev",
                  "untapped-email-scheduler-development",
                  "lambda"
                ]
              ]
            },
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogStream"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:${AWS::Partition}:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/untapped-email-scheduler-development-dev*:*"
                    }
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:PutLogEvents"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:${AWS::Partition}:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/untapped-email-scheduler-development-dev*:*:*"
                    }
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "states:StartExecution"
                  ],
                  "Resource": [
                    {
                      "Ref": "EmailSchedulingStateMachine"
                    }
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "ses:SendEmail"
                  ],
                  "Resource": {
                    "Fn::Sub": "arn:aws:ses:${AWS::Region}:${AWS::AccountId}:identity/talents@untappedpool.com"
                  }
                }
              ]
            }
          }
        ],
        "Path": "/",
        "RoleName": {
          "Fn::Join": [
            "-",
            [
              "untapped-email-scheduler-development",
              "dev",
              {
                "Ref": "AWS::Region"
              },
              "lambdaRole"
            ]
          ]
        }
      }
    },
    "ScheduleEmailLambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": {
            "Ref": "ServerlessDeploymentBucket"
          },
          "S3Key": "serverless/untapped-email-scheduler-development/dev/1564049472565-2019-07-25T10:11:12.565Z/ScheduleEmail.zip"
        },
        "FunctionName": "untapped-email-scheduler-development-dev-ScheduleEmail",
        "Handler": "src/utils/emailservice/ScheduleEmail.scheduleEmail",
        "MemorySize": 1024,
        "Role": {
          "Fn::GetAtt": [
            "IamRoleLambdaExecution",
            "Arn"
          ]
        },
        "Runtime": "nodejs10.x",
        "Timeout": 6,
        "Environment": {
          "Variables": {
            "STATEMACHINE_ARN": {
              "Ref": "EmailSchedulingStateMachine"
            }
          }
        }
      },
      "DependsOn": [
        "ScheduleEmailLogGroup",
        "IamRoleLambdaExecution"
      ]
    },
    "ScheduleEmailLambdaVersionuuUNwYCxkHsnVkqlw966uX3iHfcj3ztR2fcx5Rmnpc": {
      "Type": "AWS::Lambda::Version",
      "DeletionPolicy": "Retain",
      "Properties": {
        "FunctionName": {
          "Ref": "ScheduleEmailLambdaFunction"
        },
        "CodeSha256": "/5iVpHs7FYE5qZ2KQ1Rb4Fv6vgRXTsMbFQSW1SdJ9uk="
      }
    },
    "SendEmailLambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": {
            "Ref": "ServerlessDeploymentBucket"
          },
          "S3Key": "serverless/untapped-email-scheduler-development/dev/1564049472565-2019-07-25T10:11:12.565Z/SendEmail.zip"
        },
        "FunctionName": "untapped-email-scheduler-development-dev-SendEmail",
        "Handler": "src/utils/emailservice/Handler.mailHandler",
        "MemorySize": 1024,
        "Role": {
          "Fn::GetAtt": [
            "IamRoleLambdaExecution",
            "Arn"
          ]
        },
        "Runtime": "nodejs10.x",
        "Timeout": 6,
        "Environment": {
          "Variables": {
            "EMAIL_SENDER_ADDRESS": "talents@untappedpool.com"
          }
        }
      },
      "DependsOn": [
        "SendEmailLogGroup",
        "IamRoleLambdaExecution"
      ]
    },
    "SendEmailLambdaVersionzE6mQlwXEDrf3UE0N6vYwewsbw54UdLw62vxYAoWE": {
      "Type": "AWS::Lambda::Version",
      "DeletionPolicy": "Retain",
      "Properties": {
        "FunctionName": {
          "Ref": "SendEmailLambdaFunction"
        },
        "CodeSha256": "4ygszpz03Hnt3mcSBiJkPKKYoVhZPyjbw/3g5VZDNVg="
      }
    },
    "IamRoleStateMachineExecution": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "states.us-east-1.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "dev-us-east-1-untapped-email-scheduler-development-statemachine",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "lambda:InvokeFunction"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:aws:lambda:${AWS::Region}:${AWS::AccountId}:function:untapped-email-scheduler-development-dev-SendEmail"
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    },
    "EmailSchedulingStateMachine": {
      "Type": "AWS::StepFunctions::StateMachine",
      "Properties": {
        "DefinitionString": {
          "Fn::Sub": "{\n  \"Comment\": \"Schedules an email to be sent at a future date\",\n  \"StartAt\": \"WaitForDueDate\",\n  \"States\": {\n    \"WaitForDueDate\": {\n      \"Type\": \"Wait\",\n      \"TimestampPath\": \"$.dueDate\",\n      \"Next\": \"SendEmail\"\n    },\n    \"SendEmail\": {\n      \"Type\": \"Task\",\n      \"Resource\": \"arn:aws:lambda:${AWS::Region}:${AWS::AccountId}:function:untapped-email-scheduler-development-dev-SendEmail\",\n      \"End\": true\n    }\n  }\n}"
        },
        "RoleArn": {
          "Fn::GetAtt": [
            "IamRoleStateMachineExecution",
            "Arn"
          ]
        },
        "Tags": [],
        "StateMachineName": "EmailSchedulingStateMachine"
      },
      "DependsOn": [
        "IamRoleStateMachineExecution"
      ]
    }
  },
  "Outputs": {
    "ServerlessDeploymentBucketName": {
      "Value": {
        "Ref": "ServerlessDeploymentBucket"
      }
    },
    "ScheduleEmailLambdaFunctionQualifiedArn": {
      "Description": "Current Lambda function version",
      "Value": {
        "Ref": "ScheduleEmailLambdaVersionuuUNwYCxkHsnVkqlw966uX3iHfcj3ztR2fcx5Rmnpc"
      }
    },
    "SendEmailLambdaFunctionQualifiedArn": {
      "Description": "Current Lambda function version",
      "Value": {
        "Ref": "SendEmailLambdaVersionzE6mQlwXEDrf3UE0N6vYwewsbw54UdLw62vxYAoWE"
      }
    },
    "EmailSchedulingStateMachineArn": {
      "Description": "Current StateMachine Arn",
      "Value": {
        "Ref": "EmailSchedulingStateMachine"
      }
    },
    "EmailSchedulingStateMachine": {
      "Description": "The ARN of the Untapped Pool EmailSchedulingStateMachine",
      "Value": {
        "Ref": "EmailSchedulingStateMachine"
      }
    }
  }
}