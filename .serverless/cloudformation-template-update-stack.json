{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "The AWS CloudFormation template for this Serverless application",
  "Resources": {
    "ServerlessDeploymentBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketEncryption": {
          "ServerSideEncryptionConfiguration": [
            {
              "ServerSideEncryptionByDefault": {
                "SSEAlgorithm": "AES256"
              }
            }
          ]
        }
      }
    },
    "ScheduleEmailLogGroup": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": "/aws/lambda/serverless-untappd-admin-dev-ScheduleEmail"
      }
    },
    "SendEmailLogGroup": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": "/aws/lambda/serverless-untappd-admin-dev-SendEmail"
      }
    },
    "IamRoleLambdaExecution": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": {
              "Fn::Join": [
                "-",
                [
                  "dev",
                  "serverless-untappd-admin",
                  "lambda"
                ]
              ]
            },
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogStream"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:${AWS::Partition}:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/serverless-untappd-admin-dev*:*"
                    }
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:PutLogEvents"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:${AWS::Partition}:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/serverless-untappd-admin-dev*:*:*"
                    }
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "states:StartExecution"
                  ],
                  "Resource": [
                    {
                      "Ref": "EmailSchedulingStateMachine"
                    }
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "ses:SendEmail"
                  ],
                  "Resource": {
                    "Fn::Sub": "arn:aws:ses:${AWS::Region}:${AWS::AccountId}:identity/talents@untappedpool.com"
                  }
                }
              ]
            }
          }
        ],
        "Path": "/",
        "RoleName": {
          "Fn::Join": [
            "-",
            [
              "serverless-untappd-admin",
              "dev",
              {
                "Ref": "AWS::Region"
              },
              "lambdaRole"
            ]
          ]
        }
      }
    },
    "ScheduleEmailLambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": {
            "Ref": "ServerlessDeploymentBucket"
          },
          "S3Key": "serverless/serverless-untappd-admin/dev/1572868421106-2019-11-04T11:53:41.106Z/ScheduleEmail.zip"
        },
        "FunctionName": "serverless-untappd-admin-dev-ScheduleEmail",
        "Handler": "src/handlers/ScheduleTask.schedule",
        "MemorySize": 1024,
        "Role": {
          "Fn::GetAtt": [
            "IamRoleLambdaExecution",
            "Arn"
          ]
        },
        "Runtime": "nodejs8.10",
        "Timeout": 6,
        "Environment": {
          "Variables": {
            "STATEMACHINE_ARN": {
              "Ref": "EmailSchedulingStateMachine"
            }
          }
        }
      },
      "DependsOn": [
        "ScheduleEmailLogGroup",
        "IamRoleLambdaExecution"
      ]
    },
    "ScheduleEmailLambdaVersionUi0YU2Ji7KTBG6ghj9yPq11X5JzeSfinfUXxgKCoDI": {
      "Type": "AWS::Lambda::Version",
      "DeletionPolicy": "Retain",
      "Properties": {
        "FunctionName": {
          "Ref": "ScheduleEmailLambdaFunction"
        },
        "CodeSha256": "JDSHrpF9Fn650DOKQaKAfdAzQVsxKl10Z0Al3o/9fxY="
      }
    },
    "SendEmailLambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": {
            "Ref": "ServerlessDeploymentBucket"
          },
          "S3Key": "serverless/serverless-untappd-admin/dev/1572868421106-2019-11-04T11:53:41.106Z/SendEmail.zip"
        },
        "FunctionName": "serverless-untappd-admin-dev-SendEmail",
        "Handler": "src/handlers/SendEmail.handle",
        "MemorySize": 1024,
        "Role": {
          "Fn::GetAtt": [
            "IamRoleLambdaExecution",
            "Arn"
          ]
        },
        "Runtime": "nodejs8.10",
        "Timeout": 6,
        "Environment": {
          "Variables": {
            "EMAIL_SENDER_ADDRESS": "talents@untappedpool.com"
          }
        }
      },
      "DependsOn": [
        "SendEmailLogGroup",
        "IamRoleLambdaExecution"
      ]
    },
    "SendEmailLambdaVersionvHj5dkjvfjl1Ct6tGNhjUEqTw7cFNdkc4w6lYDz5B8": {
      "Type": "AWS::Lambda::Version",
      "DeletionPolicy": "Retain",
      "Properties": {
        "FunctionName": {
          "Ref": "SendEmailLambdaFunction"
        },
        "CodeSha256": "HOG1eIurB56SD2M5OBvztZjQ4YlEMeBFpvXAYxrWYKk="
      }
    },
    "IamRoleStateMachineExecution": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "states.us-east-1.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "dev-us-east-1-serverless-untappd-admin-statemachine",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "lambda:InvokeFunction"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:aws:lambda:${AWS::Region}:${AWS::AccountId}:function:serverless-untappd-admin-dev-SendEmail"
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    },
    "EmailSchedulingStateMachine": {
      "Type": "AWS::StepFunctions::StateMachine",
      "Properties": {
        "DefinitionString": {
          "Fn::Sub": "{\n  \"Comment\": \"Schedules an email to be sent at a future date\",\n  \"StartAt\": \"WaitForDueDate\",\n  \"States\": {\n    \"WaitForDueDate\": {\n      \"Type\": \"Wait\",\n      \"TimestampPath\": \"$.dueDate\",\n      \"Next\": \"SendEmail\"\n    },\n    \"SendEmail\": {\n      \"Type\": \"Task\",\n      \"Resource\": \"arn:aws:lambda:${AWS::Region}:${AWS::AccountId}:function:serverless-untappd-admin-dev-SendEmail\",\n      \"End\": true\n    }\n  }\n}"
        },
        "RoleArn": {
          "Fn::GetAtt": [
            "IamRoleStateMachineExecution",
            "Arn"
          ]
        },
        "Tags": [],
        "StateMachineName": "EmailSchedulingStateMachine"
      },
      "DependsOn": [
        "IamRoleStateMachineExecution"
      ]
    }
  },
  "Outputs": {
    "ServerlessDeploymentBucketName": {
      "Value": {
        "Ref": "ServerlessDeploymentBucket"
      }
    },
    "ScheduleEmailLambdaFunctionQualifiedArn": {
      "Description": "Current Lambda function version",
      "Value": {
        "Ref": "ScheduleEmailLambdaVersionUi0YU2Ji7KTBG6ghj9yPq11X5JzeSfinfUXxgKCoDI"
      }
    },
    "SendEmailLambdaFunctionQualifiedArn": {
      "Description": "Current Lambda function version",
      "Value": {
        "Ref": "SendEmailLambdaVersionvHj5dkjvfjl1Ct6tGNhjUEqTw7cFNdkc4w6lYDz5B8"
      }
    },
    "EmailSchedulingStateMachineArn": {
      "Description": "Current StateMachine Arn",
      "Value": {
        "Ref": "EmailSchedulingStateMachine"
      }
    },
    "EmailSchedulingStateMachine": {
      "Description": "The ARN of the EmailSchedulingStateMachine",
      "Value": {
        "Ref": "EmailSchedulingStateMachine"
      }
    }
  }
}